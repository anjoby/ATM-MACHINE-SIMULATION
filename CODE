# Simple ATM Machine

accounts = {}

def create_account():
    print("\n--- Create Account ---")
    acc_id = input("Enter new Account ID: ")
    if acc_id in accounts:
        print("‚ö†Ô∏è Account ID already exists!")
        return
    password = input("Set a password: ")
    accounts[acc_id] = {'password': password, 'balance': 0.0}
    print("‚úÖ Account created successfully!")

def login_account():
    print("\n--- Account Login ---")
    acc_id = input("Enter Account ID: ")
    password = input("Enter Password: ")
    
    if acc_id in accounts and accounts[acc_id]['password'] == password:
        print(f"‚úÖ Login successful! Welcome, {acc_id}.")
        account_menu(acc_id)
    else:
        print("‚ùå Invalid ID or password.")

def account_menu(acc_id):
    while True:
        print("\n--- Account Menu ---")
        print("1. Add Money")
        print("2. Withdraw Money")
        print("3. Show Balance")
        print("4. Logout")
        choice = input("Select an option: ")

        if choice == '1':
            amt = float(input("Enter amount to add: ‚Çπ"))
            accounts[acc_id]['balance'] += amt
            print(f"‚Çπ{amt} added successfully.")
        elif choice == '2':
            amt = float(input("Enter amount to withdraw: ‚Çπ"))
            if amt > accounts[acc_id]['balance']:
                print("‚ö†Ô∏è Insufficient funds.")
            else:
                accounts[acc_id]['balance'] -= amt
                print(f"‚Çπ{amt} withdrawn successfully.")
        elif choice == '3':
            print(f"Current Balance: ‚Çπ{accounts[acc_id]['balance']}")
        elif choice == '4':
            print("üîí Logged out.")
            break
        else:
            print("‚ùå Invalid choice.")

def settings():
    print("\n--- Settings ---")
    acc_id = input("Enter Account ID: ")
    old_pass = input("Enter Current Password: ")

    if acc_id in accounts and accounts[acc_id]['password'] == old_pass:
        new_pass = input("Enter New Password: ")
        accounts[acc_id]['password'] = new_pass
        print("‚úÖ Password changed successfully.")
    else:
        print("‚ùå Invalid ID or password.")

def main():
    while True:
        print("\n====== ATM MACHINE ======")
        print("1. Create Account")
        print("2. Account Login")
        print("3. Settings")
        print("4. Exit")
        choice = input("Select an option: ")

        if choice == '1':
            create_account()
        elif choice == '2':
            login_account()
        elif choice == '3':
            settings()
        elif choice == '4':
            print("üôè Thank you for using the ATM!")
            break
        else:
            print("‚ùå Invalid choice. Try again.")

if __name__ == "__main__":
    main()
